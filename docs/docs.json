{
  "$schema": "https://mintlify.com/docs.json",
  "name": "sincronizado",
  "theme": "maple",
  "description": "Hyper-local development stack with remote AI execution",
  "colors": {
    "primary": "#D4C96E",
    "light": "#F5F0C4",
    "dark": "#8B7D2E"
  },
  "logo": {
    "dark": "/logo-dark.svg",
    "light": "/logo-light.svg"
  },
  "favicon": "/logo.png",
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/microck/sincronizado"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://github.com/microck/sincronizado#quick-start"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "quick-start", "architecture"]
          },
          {
            "group": "Configuration",
            "pages": ["configuration", "plugins", "mobile-access"]
          },
          {
            "group": "Reference",
            "pages": ["workflow", "troubleshooting"]
          }
        ]
      }
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/microck/sincronizado",
      "discord": "https://discord.gg/opencode"
    }
  },
  "scripts": [
    {
      "src": "https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js",
      "defer": true
    },
    {
      "src": "https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js",
      "defer": true
    },
    {
      "src": "/gsap-animations.js",
      "defer": true
    }
  ]
},
  "rewrites": [
    {
      "source": "/install.ps1",
      "destination": "https://raw.githubusercontent.com/Microck/sincronizado/main/scripts/install.ps1"
    },
    {
      "source": "/install.sh",
      "destination": "https://raw.githubusercontent.com/Microck/sincronizado/main/scripts/setup-vps.sh"
    },
    {
      "source": "/launcher/(.*)",
      "destination": "https://raw.githubusercontent.com/Microck/sincronizado/main/launcher/:match"
    }
  ]
}
